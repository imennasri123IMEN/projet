<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.inscription"
    android:background="@drawable/i"
    android:orientation="vertical">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="70dp"
        android:layout_marginBottom="20dp"
        android:layout_gravity="center"

        android:src="@drawable/h" />


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edit_np"
        android:hint="nom et prenom"
        android:drawableLeft="@drawable/ic_baseline_emoji_people_24"
        android:drawablePadding="20dp"
        tools:ignore="NotSibling"
        >
    </EditText>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edit_login"
        android:hint="login"
        android:drawableLeft="@drawable/ic_baseline_fingerprint_24"
        android:drawablePadding="20dp"
        tools:ignore="NotSibling"

        android:inputType="text">
    </EditText>

    <EditText
        android:drawableLeft="@drawable/ic_baseline_emoji_people_24"
        android:drawablePadding="20dp"
        tools:ignore="NotSibling"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edit_email"
        android:hint="email"
        android:inputType="text">
    </EditText>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/edit_pdw"
        android:hint="mot de passe"
        android:drawableLeft="@android:drawable/btn_star_big_on"
        android:drawablePadding="20dp"
        tools:ignore="NotSibling"
        android:inputType="textPassword">
    </EditText>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/confirm"
        android:drawableLeft="@android:drawable/ic_dialog_alert"
        android:drawablePadding="20dp"
        tools:ignore="NotSibling"
        android:hint="confirmation mot de passe"
        android:inputType="textPassword">
    </EditText>

    <com.google.android.material.button.MaterialButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/loginbtn"
        android:layout_below="@+id/password_toggle"
        android:text="INSCRIPTION"
        app:backgroundTint="#FF9800"


        android:layout_centerHorizontal="true"
        >

    </com.google.android.material.button.MaterialButton>



</LinearLayout>